<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.SymptomManagement</item>
        <item name="android:textAppearance">@style/SMDefaultTextAppearance</item>
    </style>

    <style name="ActionBar.Solid.SymptomManagement" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/sm_blue</item>
    </style>

    <style name="SMDefaultTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sample_activity">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

</resources>
